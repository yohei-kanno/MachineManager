button.btn-success data-target="#Modal-#{place.id}" data-toggle="modal" type="button"
  = t("dict.edit_sm")
.modal.fade id="Modal-#{place.id}" aria-labelledby="Modal" tabindex="-1" 
  .modal-dialog role="document" 
    .modal-content
      .modal-header
        h4.modal-title
          = t("dict.edit_sm")
          span(style="font-size:10px; margin-left: 30px;") = t("dict.input_required")
        button.close data-dismiss="modal" type="button"  Ã—
          
      .modal-body
        = form_with model: place, data:{remote: true}, method: :patch do |f|
          = render "shared/place_form",{f: f}
          div id="update-place-#{place.id}"
          .text-center
            = f.submit class: "btn-success btn-submit"
